<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_picking_batch_form_inherit" model="ir.ui.view">
        <field name="name">stock.picking.batch.form.inherit</field>
        <field name="model">stock.picking.batch</field>
        <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='estimated_shipping_weight']" position="before">
                <group>
                    <field name="driver_assistant" string="Ayudante" readonly="state == 'done'" />
                    <field name="n_platforms" string="Numero Tarimas" readonly="state == 'done'"/>
                </group>
            </xpath>
            <xpath expr="//page[@name='page_transfers']" position="after">
                <page string="Flete Externo">
                    <group>
                        <group>
                            <field name="truck_type" readonly="state == 'done'" />
                            <field name="driver" readonly="state == 'done'"/>
                            <field name="plate" readonly="state == 'done'"/>
                            <field name="capacity" readonly="state == 'done'"/>
                            <field name="invoice_ref" readonly="state == 'done'"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>