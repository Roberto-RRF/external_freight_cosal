<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fleet_vehicle_form_inherit" model="ir.ui.view">
        <field name="name">fleet.vehicle.form.inherit</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='next_assignation_date']" position="after">
                <field name="numero_economico" />
            </xpath>
        </field>
    </record>

    <record id="view_fleet_vehicle_tree_inherit" model="ir.ui.view">
        <field name="name">fleet.vehicle.tree.inherit</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='license_plate']" position="before">
                <field name="numero_economico" />
            </xpath>
        </field>
    </record>
</odoo>