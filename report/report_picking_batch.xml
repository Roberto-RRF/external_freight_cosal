<odoo>
    <template id="report_picking_batch_custom" inherit_id="stock_fleet.report_picking_batch_inherit">
        <xpath expr="//div[hasclass('page')]/div[2]" position="replace">
            <div t-if="o.user_id">
                <strong>Responsible:</strong>
                <span t-field="o.user_id">John Doe</span>
            </div>
            <div t-if="o.dock_id">
                <strong>Dock:</strong>
                <span t-field="o.dock_id"/>
            </div>
            <div t-if="o.vehicle_id">
                <strong>Vehicle:</strong>
                <span t-field="o.vehicle_id"/>
            </div>
            <div t-if="o.vehicle_category_id">
                <strong>Vehicle Category:</strong>
                <span t-field="o.vehicle_category_id"/>
            </div>
            <div t-if="o.driver_assistant">
                <strong>Ayudante:</strong>
                <span t-field="o.driver_assistant"/>
            </div>
            <div t-if="o.driver">
                <strong>Chofer:</strong>
                <span t-field="o.driver"/>
            </div>
            <div t-if="o.n_platforms">
                <strong>Numero Tarimas:</strong>
                <span t-field="o.n_platforms"/>
            </div>
            <br/>
        </xpath>
    </template>
</odoo>
