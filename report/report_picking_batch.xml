<odoo>
    <template id="report_picking_batch_custom" inherit_id="stock_fleet.report_picking_batch_inherit">
        <xpath expr="//div[hasclass('page')]/div[2]" position="after">
            <div t-if="o.driver_assistant">
                <strong>Ayudante:</strong>
                <span t-field="o.driver_assistant"/>
            </div>
            <div t-if="o.driver">
                <strong>Chofer:</strong>
                <span t-field="o.driver"/>
            </div>
            <div t-if="o.n_platforms">
                <strong>Numero Tarimas:</strong>
                <span t-field="o.n_platforms"/>
            </div>
        </xpath>
    </template>
</odoo>
